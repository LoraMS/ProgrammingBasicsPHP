{% extends 'base.html.twig' %}

{% block body %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path("category_edit", {id: category.id} ) }}" class="btn btn-xs btn-info">Edit</a>
                </td>
                <td>
                    <a href="{{ path("category_delete", {id: category.id}) }}" class="btn btn-xs btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path("category_create") }}" class="btn btn-sm btn-primary">Create category</a>
    <br/>
    <br/>
{% endblock %}